@using Microsoft.AspNetCore.Mvc.Localization
@using ObserverPatternWeb.Resources.OPStrings
@model ObserverPatternWeb.Controllers.LoginModel
@inject IHtmlLocalizer<OPStringsResources> L
@{
    Layout = null;
    ViewData["Title"] = L["LogIn"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @L["CompanyName"]</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>


</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">@L["CompanyShotName"]</h1>

            </div>
            <h3>@L["WelcomeText"] @L["CompanyShotName"]</h3>
            <p>
                @L["WelcomeContext"]
            </p>
            <p>@L["LogInTitle"]</p>
            <form class="m-t" role="form" action="#">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder=@L["LogInAccountText"] asp-for="Input.UserName" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder=@L["LogInPasswordText"] asp-for="Input.Password" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">@L["LogIn"]</button>

                <a href="@Url.Action("ForgotPassword", "Pages")"><small>@L["ForgotPassword"]</small></a>
                <p class="text-muted text-center"><small>@L["NotHaveAccount"]</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Pages")">@L["CreateAccount"]</a>
            </form>
            <p class="m-t"> <small>@L["CompanyName"] &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

</body>
</html>
